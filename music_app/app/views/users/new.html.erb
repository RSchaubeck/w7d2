<form action="<%= users_url %>" method="POST">
    <%= auth_token %>
    <div class="create-flex">
        <label for="user_email">Email:</label>
        <input id="user_email" type="text" name="user[email]" value="">
        <label for="user_password">Password:</label>
        <input id="user_password" type="password" name="user[password]" value="">
        <label for="make_user"></label>
        <input id="make_user" type="submit" value="Create User">
    </div>
</form>